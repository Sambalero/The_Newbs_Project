<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Task name</th>
    <th>Job name</th>
    <th>Description</th>
    <th>Member</th>
    <th>Master</th>
    <th>Hours</th>
    <th>Skill</th>
    <th>Start date</th>
    <th>Completion date</th>
    <th>Status</th>
    <th>Percent complete</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.task_name %></td>
    <td><%= task.job_name %></td>
    <td><%= task.description %></td>
    <td><%= task.member %></td>
    <td><%= task.master %></td>
    <td><%= task.hours %></td>
    <td><%= task.skill %></td>
    <td><%= task.start_date %></td>
    <td><%= task.completion_date %></td>
    <td><%= task.status %></td>
    <td><%= task.percent_complete %></td>
    <td><%= task.comments %></td>
    <% if current_user.role == 'admin' %>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

