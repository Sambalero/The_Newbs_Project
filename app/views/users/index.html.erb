<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.role %></td>
    <% if current_user.role == 'admin' %>
      <td>&nbsp;&nbsp;<%= link_to 'Show', user %>&nbsp;&nbsp;</td>
      <td><%= link_to 'Edit', edit_user_path(user), :id => 'edit' + user.id.to_s %>&nbsp;&nbsp;&nbsp;&nbsp;</td>
      <td><%= button_to "DELETE "+user.name, user, :method=>:delete, :class=>:destroy %></td>
    <% end %>
  </tr>
<% end %>
</table>
