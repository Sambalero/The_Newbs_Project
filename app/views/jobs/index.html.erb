<h1>Listing jobs</h1>

<table>
  <tr>

    <th>Client name</th>
    <th>Job Name</th>
    <th>Contract amount</th>
    <th>Responsible partner</th>
    <th>Percent complete</th>
    <th>Completion date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.client_name %></td>
    <td><%= job.job_name %></td>
    <td><%= job.contract_amount %></td>
    <td><%= job.responsible_partner %></td>
    <td><%= job.percent_complete %></td>
    <td><%= job.completion_date %></td>

    <% if current_user then %>

        <% if current_user.role == 'admin' || current_user.role == 'master' || current_user.role == 'partner'%>    
            <td><%= link_to 'Show', job %></td>
            <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <% end %>
        <% if current_user.name == job.client_name %>
            <td><%= link_to 'Show', job %></td>
        <% end %>

    <% end -%>
  </tr>
<% end %>
</table>

<br />

